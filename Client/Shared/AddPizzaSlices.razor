<button @onclick="IncreasePizzaSlicesCount" class="btn btn-info"><span class="oi oi-plus"></span></button>

@code {
    [Parameter]
    public EventCallback<int> PizzaSlicesAdded { get; set; }

    public async Task IncreasePizzaSlicesCount()
    {
        await PizzaSlicesAdded.InvokeAsync(10);
    }
}
